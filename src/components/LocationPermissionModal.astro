    padding: 0 30px 20px;
  }

  .modal-description {
    color: #666;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 0 0 20px 0;
  }

  .feature-list li {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    margin-bottom: 10px;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    border-radius: 10px;
    transition: transform 0.2s ease;
