</style>

<script>
  import { requestLocation, markPermissionAsked } from '../utils/geo';

  export class LocationPermissionModal {
    private modal: HTMLElement;
    private allowBtn: HTMLElement;
    private denyBtn: HTMLElement;
    private closeBtn: HTMLElement;
    private onAllow?: () => void;
    private onDeny?: () => void;

    constructor() {
      this.modal = document.getElementById('location-permission-modal')!;
      this.allowBtn = document.getElementById('allow-location')!;
      this.denyBtn = document.getElementById('deny-location')!;
      this.closeBtn = this.modal.querySelector('.modal-close')!;
      
      this.init();
    }

    init() {
      // Handle allow button
      this.allowBtn.addEventListener('click', async () => {
        markPermissionAsked();
        const result = await requestLocation();
        
        if (result.success) {
          this.hide();
          if (this.onAllow) this.onAllow();
        } else if (result.errorCode === 'PERMISSION_DENIED') {
          // Show help section
          const helpDetails = this.modal.querySelector('details');
          if (helpDetails) {
            helpDetails.open = true;
          }
        }
      });

      // Handle deny button
      this.denyBtn.addEventListener('click', () => {
        markPermissionAsked();
        this.hide();
        if (this.onDeny) this.onDeny();
      });

      // Handle close button
      this.closeBtn.addEventListener('click', () => {
        this.hide();
      });

      // Handle backdrop click
      const backdrop = this.modal.querySelector('.modal-backdrop');
      backdrop?.addEventListener('click', () => {
        this.hide();
      });

      // Handle ESC key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && this.modal.classList.contains('show')) {
          this.hide();
        }
      });
    }

    show(callbacks?: { onAllow?: () => void; onDeny?: () => void }) {
      this.onAllow = callbacks?.onAllow;
      this.onDeny = callbacks?.onDeny;
      this.modal.classList.add('show');
      document.body.style.overflow = 'hidden';
    }

    hide() {
      this.modal.classList.remove('show');
      document.body.style.overflow = '';
    }
  }

  // Export for global use
  (window as any).LocationPermissionModal = LocationPermissionModal;
</script>
