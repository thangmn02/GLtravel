  <style>
    /* Map Hero Section */
    .map-hero-section {
      margin: 3rem 0;
      padding: 3rem 0;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      border-radius: 20px;
      position: relative;
      overflow: hidden;
    }
    
    .map-hero-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="%23ffffff" stroke-width="0.5" opacity="0.3"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
      opacity: 0.3;
      pointer-events: none;
    }
    
    .map-hero-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
      align-items: center;
      position: relative;
      z-index: 1;
    }
    
    .map-hero-text {
      padding: 0 2rem;
    }
    
    .map-hero-title {
      font-size: 2.5rem;
      font-weight: 800;
      margin: 0 0 1rem 0;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      line-height: 1.2;
    }
    
    .map-hero-subtitle {
      font-size: 1.2rem;
      color: #666;
      margin: 0 0 2rem 0;
      line-height: 1.5;
    }
    
    .map-hero-button {
      display: inline-flex;
      align-items: center;
      padding: 0;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      text-decoration: none;
      border-radius: 50px;
      font-weight: 600;
      font-size: 1.1rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
      position: relative;
      overflow: hidden;
    }
    
    .button-content {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 16px 28px;
      position: relative;
      z-index: 1;
    }
    
    .button-icon {
      transition: transform 0.3s ease;
    }
    
    .button-arrow {
      transition: transform 0.3s ease;
    }
    
    .map-hero-button:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
    }
    
    .map-hero-button:hover .button-icon {
      transform: scale(1.1) rotate(-10deg);
    }
    
    .map-hero-button:hover .button-arrow {
      transform: translateX(4px);
    }
    
    .map-hero-button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.6s;
    }
    
    .map-hero-button:hover::before {
      left: 100%;
    }
    
    /* Map Preview */
    .map-hero-preview {
      padding: 0 2rem;
    }
    
    .map-preview-container {
      position: relative;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
      transform: perspective(1000px) rotateY(-5deg) rotateX(2deg);
      transition: transform 0.3s ease;
    }
    
    .map-preview-container:hover {
      transform: perspective(1000px) rotateY(0deg) rotateX(0deg) scale(1.02);
    }
    
    .map-preview-image {
      width: 100%;
      height: 300px;
      background: linear-gradient(45deg, #667eea, #764ba2);
      position: relative;
      overflow: hidden;
    }
    
    .map-preview-image::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: 
        radial-gradient(circle at 20% 30%, rgba(255,255,255,0.8) 2px, transparent 2px),
        radial-gradient(circle at 70% 60%, rgba(255,255,255,0.6) 1px, transparent 1px),
        radial-gradient(circle at 40% 80%, rgba(255,255,255,0.7) 1.5px, transparent 1.5px),
        radial-gradient(circle at 80% 20%, rgba(255,255,255,0.5) 1px, transparent 1px),
        linear-gradient(135deg, transparent 40%, rgba(255,255,255,0.1) 50%, transparent 60%);
      background-size: 100px 100px, 150px 150px, 80px 80px, 120px 120px, 100% 100%;
      animation: mapAnimation 20s infinite linear;
    }
    
    @keyframes mapAnimation {
      0% { transform: translateX(0) translateY(0); }
      25% { transform: translateX(-10px) translateY(-5px); }
      50% { transform: translateX(-5px) translateY(-10px); }
      75% { transform: translateX(-15px) translateY(-3px); }
      100% { transform: translateX(0) translateY(0); }
    }
    
    .map-preview-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(10px);
      padding: 20px;
    }
    
    .preview-stats {
      display: flex;
      justify-content: space-around;
      align-items: center;
    }
    
    .stat-item {
      text-align: center;
      color: white;
    }
    
    .stat-number {
      font-size: 1.8rem;
      font-weight: 700;
      color: #667eea;
      text-shadow: 0 0 10px rgba(102, 126, 234, 0.5);
    }
    
    .stat-label {
      font-size: 0.9rem;
      font-weight: 500;
      margin-top: 4px;
      opacity: 0.9;
    }
    
    /* Responsive Design */
    @media (max-width: 768px) {
      .map-hero-content {
        grid-template-columns: 1fr;
        gap: 2rem;
        text-align: center;
      }
      
      .map-hero-title {
        font-size: 2rem;
      }
      
      .map-hero-subtitle {
        font-size: 1.1rem;
      }
      
      .map-hero-button {
        width: 100%;
        justify-content: center;
      }
      
      .map-preview-container {
        transform: none;
      }
      
      .map-preview-container:hover {
        transform: scale(1.02);
      }
    }
    
    /* Pulse animation for the button */
    @keyframes pulse {
      0% { box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3); }
      50% { box-shadow: 0 8px 25px rgba(102, 126, 234, 0.5); }
      100% { box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3); }
    }
    
    .map-hero-button {
      animation: pulse 2s infinite;
    }
    
    .map-hero-button:hover {
      animation: none;
    }
  </style>
</DocsLayout>
